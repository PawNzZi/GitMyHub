/* pages/repos/repos.wxss */
.repos-view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.head-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.tool-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 35rpx;
  margin-top: 30rpx;
  border-radius: 9rpx;
  background: #f8f8f9;
  margin-left: 50rpx;
  margin-right: 50rpx;
  width: 550rpx;
}
.item-view{
  display: flex;
  flex-direction: column;
  align-items: center;
   
}
.lang-view{
  display: flex;
  flex-direction: column;
  border-radius: 9rpx;
  background: #f8f8f9;
  padding: 20rpx 35rpx;
  margin-top: 30rpx;
  width: 550rpx;
}
.lang-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:10rpx 0; 
  align-items: center;
  
}
.icon-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 250rpx;
}
.tipImg{
  width: 500rpx;
  height: 307rpx;
}
.stars-btn{
  height: 50rpx;
  width: 120rpx;
  border-radius: 50rpx;
  color: white;
  background: #0387FE;
  line-height: 50rpx;
  text-align: center;
  margin-top: 15rpx;
  font-size: 26rpx;
}
.readme-title{
  margin-top: 30rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #1c2438;
}
.htmlTowxml{
  background: #f8f8f9;
  width: 700rpx;
}