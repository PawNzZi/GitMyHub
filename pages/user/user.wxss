/* pages/user/user.wxss */
.icon-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 250rpx;

}
.tipImg{
  width: 500rpx;
  height: 307rpx;
}
.head-bg{
  width: 1000rpx;
  height: 1000rpx;
  border-radius: 1500rpx;
  background: #0387FE;
}
.login-btn{
  background: #0387FE;
  height: 70rpx;
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  border-radius: 70rpx;
  margin-top: 35rpx; 
}
.user-view{
  display: flex;
  flex-direction: column;
  z-index: 1
}
.user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  z-index: 1;
}
.tool-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 35rpx;
  margin-top: 30rpx;
  border-radius: 9rpx;
  background: #f8f8f9;
  margin-left: 50rpx;
  margin-right: 50rpx;
  z-index: 1;
}
.item-view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-view-bottom{
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-right: 50rpx;
  border-radius: 9rpx;
  background: #f8f8f9; 
  margin-top: 30rpx;
  padding: 25rpx 30rpx;
}
.item-user{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}
.item-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.issues{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border-radius: 9rpx;
  background: #f8f8f9; 
  margin-top: 30rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  padding-left: 40rpx;
  padding-right: 30rpx;
  color: #495060
}
.version{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  bottom: 50rpx;
  width: 100%;
}
.top-bg{
  position: absolute;
  width: 100%;
}