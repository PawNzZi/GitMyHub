.user-view{
  display: flex;
  flex-direction: column;
  z-index: 1
}
.user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}
.tool-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 35rpx;
  margin-top: 30rpx;
  border-radius: 9rpx;
  background: #f8f8f9;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
.item-view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-view-bottom{
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-right: 50rpx;
  border-radius: 9rpx;
  background: #f8f8f9; 
  margin-top: 30rpx;
  padding: 25rpx 30rpx;
}
.item-user{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}
.item-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.stars-btn{
  height: 50rpx;
  width: 120rpx;
  border-radius: 50rpx;
  color: white;
  background: #0387FE;
  line-height: 50rpx;
  text-align: center;
  margin-top: 15rpx;
  font-size: 26rpx;

}